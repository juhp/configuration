#!/bin/sh

set -e +x

if [ $# -ne 1 ]; then
    echo "Usage: $(basename $0) [package]"
    exit 1
fi

# how to switch to running apps
CMD=-a

case $1 in
    gnome-terminal) WS=0 ;;
    emacs) WS=1 ;;
    google-chrome) WS=2 CMD="-s$WS" ENV="LANG=ja_JP.utf8" ;;
    xchat-gnome) WS=5 ;;
    virt-manager) WS=6 CMD="-s$WS" ;;
    firefox) WS=7 ;;
    libreoffice) WS=8 ;;
    *) WS=9
esac

if ! wmctrl -d | grep -q "$WS  \* DG:"; then
    wmctrl -s $WS
else
    if wmctrl -x -l | grep -qi "[^/:]$1"; then
        wmctrl -x $CMD $1
    else
        env $ENV $1
    fi
fi
