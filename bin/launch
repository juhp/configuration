#!/bin/sh

set -e +x

if [ $# -ne 1 ]; then
    echo "Usage: $(basename $0) [package]"
    exit 1
fi

# how to switch to running apps
CMD=-a

case $1 in
    gnome-terminal) WS=0 ;;
    emacs) WS=1 ;;
    firefox) WS=2 ;;
    xchat-gnome) WS=3 ;;
    chromium-browser) WS=4 CMD="-s$WS" ENV="LANG=ja_JP.utf8" ;;
    virt-manager) WS=5 CMD="-s$WS" ;;
    libreoffice) WS=6 ;;
    *) WS=7
esac

# '*' = current WS
if ! wmctrl -d | grep -q "$WS  \* DG:"; then
    wmctrl -s $WS
else
    if wmctrl -x -l | grep -qi "[^/:]$1"; then
        wmctrl -x $CMD $1
    else
        env $ENV $1
    fi
fi
